<div class="container">
</br>
<h1>Here you can create a new Cocktail</h1>
<hr>
</br>
    <%= simple_form_for [@cocktail], :html=> { class: 'simple-forms box-special p-4' } do |f| %>
      <%= f.input :name %>
      </br>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Submit Cocktail", class: "btn btn-primary btn-new" %>
    <% end %>
</div>
