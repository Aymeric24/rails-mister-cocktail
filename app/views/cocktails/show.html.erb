<div class="container">
  </br>
<%= link_to "<-- Go Back to the list", cocktails_path, :class => "btn btn-secondary rounded btn-back grow-animation"%>
  </br>
  </br>
  </br>
  <div>
    <small>
      <h1 style="font-size:40px;"><%= @cocktail.name %></h1>
    </small>
  </div>
  <hr>
  <div class="row">
          <% if @cocktail.photo.attached? %>
            <%= cl_image_tag @cocktail.photo.key, :class => "card-img-top rounded box-special box-special-show" %>
          <% end %>
      <div class="col-12 card mt-3 shadow box-special" style="width: 50rem;">
        <div class="card-body">
          <% @doses.each do |dose|%>
            <p><%= dose.description %> of <%= dose.ingredient.name %> -  <%= link_to "", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'}, :class => "far fa-trash-alt" %></p>
            </br>
          <% end %>
          <%= link_to "+ Add Doses", new_cocktail_dose_path(@cocktail), :class => "btn btn-primary rounded btn-more" %>
        </div>
      </div>
  </div>
</div>
