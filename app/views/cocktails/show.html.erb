<div class="container">
  </br>
<%= link_to "<-- Go Back to the list", cocktails_path %>
  </br>
  </br>
  </br>
  <small>
    <h1><%= @cocktail.name %></h1>
  </small>
  <hr>
  <div class="row">
      <div class="card ml-3 shadow" style="width: 50rem;">
        <div class="card-body">
          <% @doses.each do |dose|%>
            <p><%= dose.description %> of <%= dose.ingredient.name %> -  <%= link_to "", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'}, :class => "far fa-trash-alt" %></p>
            </br>
          <% end %>
          <%= link_to "Add Doses", new_cocktail_dose_path(@cocktail), :class => "btn btn-danger" %>
          <hr>
        </div>
      </div>
  </div>
</div>
