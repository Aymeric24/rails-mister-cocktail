<div class="container">
  </br>
<div class="float-right m-3 rounded"><%= link_to "+ New", new_cocktail_path, :class => "btn btn-danger" %></div>
  <h1>Here's all your cocktails</h1>
  <hr>
  </br>
      <div class="card-group d-flex">
        <% @cocktails.each do |cocktail| %>
        <div class="col-9 col-sm-12 col-md-3 col-lg-3">
          <div class="card shadow ml-3 mb-3" style="border-radius: 5px;">
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name %></h5>
              <%= link_to "See More", cocktail_path(cocktail.id), :class => "btn btn-primary" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
</div>

