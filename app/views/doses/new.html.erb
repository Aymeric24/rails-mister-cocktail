<div class="container">
</br>
  <h1>Here you can create a new Dose</h1>
<hr>
</br>
    <%= simple_form_for [@cocktail, @dose], :html=> { class: 'simple-forms box-special p-4' } do |f| %>
      <%= f.input :description %>
      </br>
      <%= f.association :ingredient %>
      </br>
      <%= f.submit "Submit Dose", class: "btn btn-primary btn-new" %>
    <% end %>
</div>
